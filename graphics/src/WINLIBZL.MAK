OBJS6 =      WREFRESH.OBJ WLOADBMP.OBJ WNOTIFY.OBJ  WKEYSTAT.OBJ WFILETIT.OBJ


all          :  $(OBJS1) $(OBJS2) $(OBJS3) $(OBJS4) $(OBJS5) $(OBJS6)
	del winlibzl.lib
	zorlib winlibzl @winlibzl.lnk

