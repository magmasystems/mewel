WEXTTEXT.OBJ WFILEIO.OBJ  

OBJS2 =      WGDICHAR.OBJ WGDICLIP.OBJ WGDIFONT.OBJ WGDIRECT.OBJ \
WGDIRGB.OBJ  WGDIRGN.OBJ  WGDISET.OBJ  WGDISHAP.OBJ WGDISTUB.OBJ WGETCLAS.OBJ \
WINACCEL.OBJ WINALT.OBJ   WINATOM.OBJ  WINBLIT.OBJ  WINBORDR.OBJ \
WINBREAK.OBJ WINCARET.OBJ WINCLASS.OBJ WINCLICK.OBJ WINCOLOR.OBJ \
WINCOMBO.OBJ WINCREAT.OBJ WINDLG.OBJ   WINDC.OBJ

OBJS3 =      WINDRAW.OBJ  WINDSTRY.OBJ WINEDIT.OBJ  WINENABL.OBJ \
